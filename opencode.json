{
    "$schema": "https://opencode.ai/config.json",
    "lsp": {
        "php intelephense": {
            "command": ["intelephense", "--stdio"],
            "extensions": [".php"]
        }
    },
    "mcp": {
        "laravel-boost": {
            "type": "local",
            "enabled": true,
            "command": ["php", "artisan", "boost:mcp"]
        },
        "herd": {
            "type": "local",
            "enabled": true,
            "command": ["php", "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"],
            "environment": {
                "SITE_PATH": "/Users/oliver/src/tries/2026-01-01-livewire-starter-kit"
            }
        }
    },
    "formatter": {
        "prettier": {
            "disabled": true
        }
    }
}
